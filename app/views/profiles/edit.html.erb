<div class="container">
  <% if current_user.profile && current_user.profile.photo %>
    <%= cl_image_tag current_user.profile.photo, crop: :fill, class: "avatar-small" %>
  <% else %>
    <%= image_tag "avatar.jpg", crop: :fill, class: "avatar-small" %>
  <% end %>
  <h1>Hi, <%= @profile.first_name %>!</h1>
  <h2>Edit your profile here</h2>

  <%= render "form_profile" %>
</div>
