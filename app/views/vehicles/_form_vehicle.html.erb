<%= simple_form_for @vehicle do |f| %>
  <%= f.input :name %>
  <%= f.association :type %>
  <%= f.input :price, hint: 'Price should be in euros per day' %>
  <%= f.input :description %>
  <%= f.input :seats %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <input type="search" id="address-input" class="form-control" placeholder="Search your address here" />
  <%= f.input :address_street, input_html: {value: f.object.address_street || current_user.profile.address_street} %>
  <%= f.input :address_city, input_html: {value: f.object.address_city || current_user.profile.address_city} %>
  <%= f.input :address_zipcode, input_html: {value: f.object.address_zipcode || current_user.profile.address_zipcode} %>
  <%= f.button :submit %>
<% end %>
